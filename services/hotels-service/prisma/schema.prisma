generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Hotel {
  id           Int           @id @default(autoincrement())
  name         String
  address      String
  location_lng Decimal
  location_lat Decimal
  hotelAdminId Int
  Reservations Reservation[]
}

model Reservation {
  id          Int     @id @default(autoincrement())
  description String
  price       Decimal
  hotel       Hotel   @relation(fields: [hotelId], references: [id])
  hotelId     Int
}
